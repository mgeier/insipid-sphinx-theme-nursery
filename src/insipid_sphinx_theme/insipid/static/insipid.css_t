/* -- hyperlink styles ------------------------------------------------------ */

a {
    {{ theme_style_link }}
}

a:hover {
    {{ theme_style_hover }}
}

a:visited {
    {{ theme_style_visited }}
}

a.external {
    {{ theme_style_external_link }}
}

a.external:hover {
    {{ theme_style_external_hover }}
}

a.external:visited {
    {{ theme_style_external_visited }}
}

div.footer a {
    {{ theme_style_footer_link }}
}

div.footer a:hover {
    {{ theme_style_footer_hover }}
}

div.footer a:visited {
    {{ theme_style_footer_visited }}
}

/* -- code formatting ------------------------------------------------------- */

pre {
    padding: 5px;
    background-color: {{ theme_codebgcolor }};
    color: {{ theme_codetextcolor }};
    line-height: 120%;
    border: 1px solid #ac9;
    border-left: none;
    border-right: none;
}

code {
    background-color: #e0e0e0;
    padding: 0 1px 0 1px;
    /*font-size: 0.95em;*/
}

div.code-block-caption {
    color: #efefef;
    background-color: #1c4e63;
}

/* TODO: separate settings for code and pre and kbd? */
/* TODO: more specific than "pre"? */
/* TODO: use theme_codefont? */
code, pre, kbd {
    /*font-family: monospace;*/
    /*font-family: 'Source Code Pro', Consolas, 'Ubuntu Mono', Menlo, 'DejaVu Sans Mono', monospace;*/
    font-family: 'SFMono-Regular', Consolas, 'Liberation Mono', Menlo, 'DejaVu Sans Mono', 'Bitstream Vera Sans Mono', Courier, monospace;
}

/* -- admonitions ----------------------------------------------------------- */

p.admonition-title {
    font-weight: normal;
}

p.admonition-title:after {
    content: ":";
}

div.admonition > p.admonition-title {
    margin: -7px -7px 7px -7px;
    padding: 4px 10px 4px 10px;
}

div.admonition p.admonition-title + p {
    display: inline;
}

div.admonition p,
div.admonition pre,
div.admonition ul,
div.admonition ol {
    margin-bottom: 5px;
}

div.topic {
    background-color: #eee;
}

div.admonition {
    color: #666;
    background-color: #e7f2fa;
}

div.admonition p.admonition-title {
    color: #fff;
    background-color: #6ab0de;
}

div.admonition.attention,
div.admonition.caution,
div.admonition.danger,
div.admonition.error,
div.admonition.important,
div.admonition.warning {
    background-color: #fff2db;
}

div.admonition.attention > p.admonition-title,
div.admonition.caution > p.admonition-title,
div.admonition.danger > p.admonition-title,
div.admonition.error > p.admonition-title,
div.admonition.important > p.admonition-title,
div.admonition.warning > p.admonition-title {
    color: #fff;
    background-color: #f0b37e;
}

div.admonition code {
    {# TODO: use normal text color #}
    color: #000;
}

div.admonition pre {
    background-color: #fafafa;
}

/* -- tables ---------------------------------------------------------------- */

th, dl.field-list > dt {
    background-color: #ede;
}

