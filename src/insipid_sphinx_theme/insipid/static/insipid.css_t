    background-color: #f4debf;
    border-top: 1px solid #ac9;
    border-bottom: 1px solid #ac9;
}

/* -- media queries --------------------------------------------------------- */

@media only screen and (max-width: calc({{ theme_sidebarwidth|todim }} + {{ theme_body_min_width|todim }})) {
    body.sidebar-visible {
        margin-left: 0;
    }

    .sidebar-visible #topbar-placeholder {
        margin-left: 0;
    }

    body.js.sidebar-visible {
        overflow: hidden;
    }

    .js #overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        visibility: hidden;
        opacity: 0;
        background-color: rgba(0, 0, 0, 0.5);
        transition: opacity {{ theme_sidebar_transition }}, visibility 0s {{ theme_sidebar_transition }};
        z-index: 42;
    }

    .js.sidebar-visible #overlay {
        visibility: visible;
        opacity: 1;
        transition: opacity {{ theme_sidebar_transition }};
    }

    .no-js .sphinxsidebar {
        position: relative;  /* To be able to hide nav-icon */
        top: unset;
        width: unset;
    }
}

