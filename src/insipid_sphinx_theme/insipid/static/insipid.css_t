/* -- sidebar --------------------------------------------------------------- */

div.sphinxsidebar {
	position: fixed;
    width: var(--sidebar-width);
	left: 0;
	top: var(--topbar-height);
	bottom: 0;
	overflow-y: auto;
    float: unset;
    margin-left: unset;  /* override basic.css */
    z-index: 99;
    /*
    font-size: 0.875em;
    -webkit-overflow-scrolling: touch;
    overscroll-behavior-y: contain;
    */

    background-color: #1c4e63;
}

.js.topbar-folded .sphinxsidebar,
.no-js .sphinxsidebar {
    top: 0;
}

{% if READTHEDOCS|tobool %}
.js:not(.sidebar-resizing) .rst-versions.rst-badge {
    transition: left {{ theme_sidebar_transition }};
}
{% endif %}

.js:not(.sidebar-resizing) .sphinxsidebar {
    transition: left {{ theme_sidebar_transition }}, top {{ theme_topbar_transition }};
}

.js.sidebar-resizing .sphinxsidebar {
    transition: top {{ theme_topbar_transition }};
}

/*
.sphinxsidebar code {
    line-height: 2em;
}
*/

div.sphinxsidebarwrapper {
    position: relative;  /* reference for sidebar-resize-handle */
    padding: 10px 10px;
    min-height: 100%;
}

.js.topbar-folded .sphinxsidebar .sphinxsidebarwrapper,
.no-js .sphinxsidebar .sphinxsidebarwrapper {
    padding-top: calc(10px + var(--topbar-height));
}

.js .sphinxsidebar .sphinxsidebarwrapper {
    transition: padding-top {{ theme_topbar_transition }};
}

#sidebar-resize-handle {
    position: absolute;
    width: 0;
    right: 0;
    top: 0;
    bottom: 0;
}

.js #sidebar-resize-handle {
    cursor: col-resize;
    background-color: #3c6e83;
    width: {{ theme_sidebar_handle_width|todim }};
}

{% if READTHEDOCS|tobool %}
.js.sidebar-hidden .rst-versions.rst-badge,
{% endif %}
.js.sidebar-hidden .sphinxsidebar {
    left: calc(0px - var(--sidebar-width));
}

