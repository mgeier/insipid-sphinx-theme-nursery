/* -- topbar --------------------------------------------------------------- */

#topbar-placeholder {
    z-index: 123;
}

.js #topbar-placeholder {
    position: -webkit-sticky;
    position: sticky;
    top: 0;
}

.sidebar-visible #topbar-placeholder {
    margin-left: calc(0px - var(--sidebar-width));
}

.js:not(.sidebar-resizing) #topbar-placeholder {
    transition: margin-left {{ theme_sidebar_transition }};
}

#topbar-container {
    border-bottom: #f2f2f2 solid 1px;
    color: #ccc;
    background-color: #fff;
}

#menu-bar {
    display: flex;
    flex-wrap: wrap;
}

.js #topbar-container {
    transition: transform {{ theme_topbar_transition }};
}

#menu-bar .icon-button {
    position: relative;
    padding: 0 8px;
    z-index: 10;
    line-height: {{ theme_topbarheight|todim }};
    cursor: pointer;
}

@media only screen and (max-width: 420px) {
    #menu-bar .icon-button {
        padding: 0 5px;
    }
}

#menu-bar .icon-button:hover {
    color: #333;
}

.icon-button svg {
  /*display: inline-block;*/
  width: 1em;
  height: 1em;
  vertical-align: middle;
  /*margin: 0;*/
  fill: currentColor;
}

.icon-button {
    border: none;
    background: none;
    padding: 0;
    color: inherit;
}

.right-buttons {
    margin: 0 15px;
}

/*
.right-buttons a {
    text-decoration: none;
}
*/

.js.topbar-folded #topbar-placeholder:not(:hover) #topbar-container {
    transform: translateY(-100%);
}

.left-buttons {
    display: flex;
    margin: 0 5px;
}

/* TODO: separate rules for individual buttons? */
.no-js .left-buttons {
    display: none;
}

.menu-title {
    display: inline-block;
    font-weight: 200;
    font-size: 2rem;
    line-height: {{ theme_topbarheight|todim }};
    text-align: center;
    margin: 0;
    flex: 1;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.js .menu-title {
    cursor: pointer;
}

