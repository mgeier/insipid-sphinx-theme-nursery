@import 'basic.css';

.hidden { display: none; }

.loading {
    /* Disable transitions during page load */
    transition: none !important;
}

/* -- variables ------------------------------------------------------------- */

/* TODO: --page-padding? */

:root {
    --sidebar-width: {{ theme_sidebarwidth|todim }};
    --topbar-height: {{ theme_topbarheight|todim }};
}

/* -- page layout ----------------------------------------------------------- */

/* https://css-tricks.com/inheriting-box-sizing-probably-slightly-better-best-practice/ */
html { box-sizing: border-box; }
*, *:before, *:after { box-sizing: inherit; }

html, body {
	padding: 0;
	margin: 0;
}

html {
	height: 100%;  /* necessary for flex-grow */

    /* TODO: scrollbar-color (from mdBook)? */

    /* https://github.com/sphinx-doc/sphinx/issues/1125 */
    background-color: #fff;
    /*text-size-adjust: none;*/
}

body {
    display: flex;
    flex-direction: column;
    min-height: 100%;  /* necessary for flex-grow */
    /*overflow-x: hidden;*/

    font-family: 'Open Sans', sans-serif;
    /*font-size: 100%;*/
    /*color: #000;*/
}

body.sidebar-visible {
    margin-left: var(--sidebar-width);
}

body.js:not(.sidebar-resizing) {
    transition: margin-left {{ theme_sidebar_transition }};
}

/* TODO: are wide images horizontally scrollable? */

div.body, div.related, div.footer {
    position: relative;  /* To be able to hide nav-icon */
}

div.document {
    flex-grow: 1;  /* To keep the footer at the bottom (on very short pages) */
}

div.body {
    padding: 0 20px 30px 20px;
    /* Reset box-sizing in case some 3rd party CSS relies on default behavior */
    box-sizing: initial;
    /* Override basic.css, min width is handled with media queries */
    min-width: unset;
{% if theme_body_centered|tobool %}
    margin-left: auto;
    margin-right: auto;
{% endif  %}

    background-color: #fff;
    color: #000;
}

div.related {
    line-height: 30px;
    color: #fff;
    background-color: #133f52;
}

/* TODO: separate conf option? */
div.related a {
    color: #fff;
}

div.footer {
    width: 100%;
    padding: 9px 0 9px 0;

    text-align: center;
    font-size: 75%;
    color: #fff;
    background-color: #11303d;
}

/* -- body styles ----------------------------------------------------------- */

div.body h1,
div.body h2,
div.body h3,
div.body h4,
div.body h5,
div.body h6 {
    /*font-family: {{ theme_headfont }};*/
    background-color: {{ theme_headbgcolor }};
    font-weight: normal;
    color: {{ theme_headtextcolor }};
    border-bottom: 1px solid #ccc;
    margin: 20px -20px 10px -20px;
    padding: 3px 0 3px 10px;
}

div.body h1 { margin-top: 0; font-size: 200%; }
div.body h2 { font-size: 160%; }
div.body h3 { font-size: 140%; }
div.body h4 { font-size: 120%; }
div.body h5 { font-size: 110%; }
div.body h6 { font-size: 100%; }

.js div.section,
.js dt {
    scroll-margin-top: var(--topbar-height);
}

a.headerlink {
    color: {{ theme_headlinkcolor }};
    font-size: 0.8em;
    padding: 0 4px 0 4px;
    text-decoration: none;
}

a.headerlink:hover {
    background-color: {{ theme_headlinkcolor }};
    color: white;
}

